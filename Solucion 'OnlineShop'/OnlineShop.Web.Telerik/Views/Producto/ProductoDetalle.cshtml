@model OnlineShop.Common.ViewModels.ProductoViewModel
@{
    ViewBag.Title = "ProductoDetalle";
}

<h2>ProductoDetalle</h2>

<div class="row">
    <div class="col-md-12">
        <div class="col-md-9">
            <h3 class="text-primary"> @Model.Nombre </h3>
            <p>Sku (Código): @Model.Sku</p>
        </div>
        <div class="col-md-3">

        </div>
    </div>
</div>
<hr />
<div class="row">
    <div class="col-md-12">
        <div class="col-md-1">

        </div>
        <div class="col-md-4">
            <img class="img-responsive" src="@Url.Content(@Model.Imagenes.Where(x => x.Tipo == "P").FirstOrDefault().Ruta)" />
        </div>
        <div class="col-md-4">
            @Html.Raw(Model.Descripcion)
        </div>
        <div class="col-md-3">
            <p><h3 class="text-danger">@string.Format("{0:C}", Model.PrecioCosto)</h3></p>
            <p>
                <span class="label label-success"><span class="glyphicon glyphicon-ok"></span>&nbsp; En Stock</span>
                <span class="label label-default">Precios Incluyen IGV</span>
            </p>
            <p>
                <a href="@Url.Action("Carrito", "Producto", new { id = Model.Id })" class="btn btn-primary btn-lg" role="button">
                    <span class="glyphicon glyphicon-shopping-cart" aria-hidden="true"></span> COMPRAR AHORA
                </a>
            </p>
        </div>
    </div>
</div>